{
  "name": "never-fail",
  "description": "Check if the file path are equal",
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.base.json",
    "clean": "rimraf dist",
    "coverage": "jest --coverage",
    "dependency-check": "dependency-check . --unused --no-dev && dependency-check . --missing --no-dev",
    "lint": "tslint -p tsconfig.json",
    "prepublishOnly": "npm run clean && npm run build",
    "semantic-release": "semantic-release",
    "test": "tsc --noemit && jest",
    "verify": "npm run lint && npm run coverage && npm run build && npm run dependency-check",
    "watch": "jest --watch"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/never-fail.git"
  },
  "bugs": {
    "url": "https://github.com/unional/never-fail/issues"
  },
  "homepage": "https://github.com/unional/never-fail",
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "testEnvironment": "node",
    "testRegex": ".*.spec.ts$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.9.4",
    "dependency-check": "^3.2.0",
    "eslint": "^5.5.0",
    "eslint-plugin-unional": "^1.0.0",
    "jest": "^23.5.0",
    "ts-jest": "^23.10.0-beta.2",
    "tslint": "^5.11.0",
    "tslint-config-unional": "^0.10.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "tersify": "^2.0.0"
  }
}
